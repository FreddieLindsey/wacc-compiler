#!/usr/bin/ruby
# Ruby front-end for your compiler.
if ARGV.length == 1
    system("java -cp bin:lib/antlr-4.4-complete.jar wacc.Main #{ARGV[0]}")
elsif ARGV.length == 2
    system("java -cp bin:lib/antlr-4.4-complete.jar wacc.Main #{ARGV[0]} #{ARGV[1]}")
end
    if ($?.exitstatus != 0)
      if ($?.exitstatus == 100)
        print "There was a syntax error...\n"
      end
      if ($?.exitstatus == 200)
        print "There was a semantic error...\n"
      end
      print "\nTried compiling #{ARGV[0]}\n\n"
      exit $?.exitstatus
    end